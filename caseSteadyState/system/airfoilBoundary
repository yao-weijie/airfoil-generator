Description
    Writes out values of fields interpolated to a specified cloud of points.

\*---------------------------------------------------------------------------*/

libs            ("libsampling.so");
executeControl  writeTime;
writeControl    writeTime;

fields          (p);
type            surfaces;
patches         (aerofoil);

setFormat	    raw;
surfaceFormat   raw;
interpolationScheme cell;


surfaces
(
    aerofoil
    {
        type patch;
        patches (aerofoil);
    }
);



